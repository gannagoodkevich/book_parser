<div class="card-body">
  <h4 class="card-title"><%= book.title%></h4>
  <h5 class="card-title"><%= book.author%></h5>
  <p>
  <b>Genre: </b>
  <%if book.genre %>
    <span class="d-md-inline-flex badge badge-pill badge-secondary"><%= link_to book.genre.title, books_path(genre_id: book.genre.id), style: "color:#ffffff", remote: true%></span>
  <%end %>
  <p>
  <b>Status: </b>
  <%if book.status %>
      <span class="d-md-inline-flex badge badge-pill badge-info"><%= link_to book.status.status_title, books_path(status_id: book.status.id), style: "color:#ffffff", remote: true%></span>
  <%end %>
  <p>
  <b>Cover: </b>
  <% if book.cover %>
      <span class="d-md-inline-flex badge badge-pill badge-primary"><%= link_to book.cover.cover_type, books_path(cover_id: book.cover.id), style: "color:#ffffff", remote: true%></span>
  <%end %>
  <p>

  <%= link_to edit_book_path(id: book.id), class: "card-link", remote: true do %>
    Edit
  <% end %>
  <%= button_to 'Destroy', book_path(id: book.id),
                method: :delete,
                data: { confirm: 'Are you sure?' }, class:  "btn btn-danger", remote: true%>
</div>